extends layout 

block content 

  h1 #{title}

  form(method='POST')
    div.form-group 
      label(for='name') Instrument: 
      input#name.form-control(type='text' name='name' required
        value=(undefined===instrument ? '' : instrument.name))
      label(for='description') Description: 
      textarea#description.form-control(placeholder='Description' name='description' required
        ) #{undefined===instrument ? '' : instrument.description}
    button.btn.btn-primary(type='submit') Submit 

  if errors
    ul  
      for error in errors 
        li!= error.msg