extends layout

block content
  h1=title

  form(method='POST')
    div.form-group
      label(for='first_name') First Name:
      input#first_name.form-control(type='text', placeholder='First name' name='first_name' required value=(undefined===composer ? '' : composer.first_name) )
      label(for='family_name') Family Name:
      input#family_name.form-control(type='text', placeholder='Family name' name='family_name' required value=(undefined===composer ? '' : composer.family_name))
      label(for='nationality') Nationality: 
      input#nationality.form-control(type='text', placeholder='Nationality' name='nationality' value=(undefined===composer ? '' : composer.nationality))
    div.form-group
      label(for='date_of_birth') Date of birth:
      input#date_of_birth.form-control(type='date' name='date_of_birth' value=(undefined===composer ? '' : composer.date_of_birth_yyyy_mm_dd) )
      label(for='date_of_death') Date of death:
      input#date_of_death.form-control(type='date' name='date_of_death' value=(undefined===composer ? '' : composer.date_of_death_yyyy_mm_dd) )
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg
