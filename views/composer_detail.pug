extends layout 

block content 
  h1 Title: #{composer.name}
  p #[strong #{composer.nationality}]
  p #{composer.lifespan} 

  div(style='margin-left:20px;margin-top:20px')

    h4 Songs 
    if composer_songs.length 
      dl 
        each song in composer_songs 
          dt 
            a(href=song.url) #{song.name} 
          if song.period
            dd #[strong Period: ] #{song.period.name}
          p #[strong Instruments: ]
            each val, index in song.instrument 
              a(href=val.url) #{val.name} 
              if index < song.instrument.length - 1 
                |,&nbsp;
    else 
      p This composer has no songs.
  hr
  p
    a(href=composer.url+'/delete') Delete composer
  p 
    a(href=composer.url+'/update') Update composer
